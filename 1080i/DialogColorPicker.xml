<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">6</defaultcontrol>
	<onunload>ClearProperty(highlight,home)</onunload>
	<onunload>ClearProperty(gradient,home)</onunload>
	<controls>
        <include content="DefDialog">
	        <param name="header_id" value="1"/>
	        <param name="header_label" value=""/>
			<param name="height" value="864" />
			
			<!-- Color picker panel -->
			<control type="panel" id="6">
                <left>40</left>
                <top>117</top>
                <width>660</width>
                <height>660</height>
                <onback>7</onback>
                <onleft>7</onleft>
                <onright>1600</onright>
				<pagecontrol>1600</pagecontrol>
                <orientation>vertical</orientation>
                <itemlayout height="60" width="60">
                    <control type="image">
                        <width>58</width>
                        <height>58</height>
                        <texture>common/white.png</texture>
						<colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
                    </control>
				</itemlayout>
				<focusedlayout height="60" width="60">
                    <control type="group">
                        <animation effect="zoom" time="150" tween="sine" easing="inout" start="100" end="145" center="30,30">Focus</animation>
                        <control type="image">
                            <width>58</width>
                            <height>58</height>
                            <texture border="5" colordiffuse="ffffffff">common/box.png</texture>
                        </control>
                        <control type="image">
                            <width>58</width>
                            <height>58</height>
                            <texture border="5" colordiffuse="White12">common/box.png</texture>
                        </control>
                        <control type="image">
                            <left>6</left>
                            <top>6</top>
                            <width>46</width>
                            <height>46</height>
                            <texture border="0">common/white.png</texture>
                            <colordiffuse>$INFO[ListItem.Label2]</colordiffuse>
                        </control>
                    </control>
				</focusedlayout>
			</control>

            <include content="scrollbar_dialog">
                <param name="scrollid" value="1600"/>
                <param name="onleft" value="6"/>
                <param name="onright" value="101"/>
                <param name="height" value="660" />
            </include>
 
            <!-- Buttons -->           
            <control type="grouplist" id="101">
                <top>115</top>              
                <right>42</right>
                <width>300</width>
                <onleft>1600</onleft>
                <onright>6</onright>
                <usecontrolcoords>true</usecontrolcoords>
	           	<control type="group">
	                <visible>!String.IsEmpty(Window(home).Property(highlight)) | !String.IsEmpty(Window(home).Property(gradient))</visible>
	                <width>100%</width>
	                <height>264</height>
	                <include content="Def_Gradient_Preview_Image" condition="!String.IsEmpty(Window(home).Property(highlight))">
	                    <param name="highlight_color" value="$INFO[Window(home).Property(highlight)]"/>
	                    <param name="gradient_color" value="$INFO[Container(6).ListItem.Label2]"/>	                    
	                </include>
	                <include content="Def_Gradient_Preview_Image" condition="!String.IsEmpty(Window(home).Property(gradient))">
	                    <param name="highlight_color" value="$INFO[Container(6).ListItem.Label2]"/>
	                    <param name="gradient_color" value="$INFO[Window(home).Property(gradient)]"/>	                    
	                </include>
	            </control>
		        <control type="button" id="7">
		            <description>Cancel</description>
		            <include>DefDialogButtons</include>
		        </control>		
			</control>			
	        <control type="label">
	            <include>Animation.FadeIn</include>
	            <include>Animation.FadeOut</include>
	            <left>40</left>
	            <font>Tiny</font>
	            <height>50</height>
	            <bottom>30</bottom>
	            <textcolor>Black70</textcolor>
				<label>[COLOR Black100]$LOCALIZE[737]: [/COLOR]$INFO[Container(6).ListItem.Label,, - ]$INFO[Container(6).ListItem.Label2,#,]</label>
	        </control>
            <include>DialogSelectlabelInclude</include>
		</include>	
	</controls>
</window>